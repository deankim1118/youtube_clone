extends base.pug

block content 
    h4 Update Videos
    form(method="POST")
        //- Every input must have a name="" So, You can get the input value by request.body.name 
        input(name="title", placeholder="Enter New Title", value=video.title, required)
        input(name='description', placeholder='Description', required, type='text', maxlength=80, value=video.description)
        input(name='hashtags', placeholder='Hashtags, separated by comma.', required, type='text', value=video.hashtags.join())
        input(value="Save", type="submit")
